<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="DescTextView">
        <item name="android:textSize">@dimen/descTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:padding">@dimen/padding</item>
    </style>

</resources>